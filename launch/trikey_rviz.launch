
<launch>
  
  <arg name = "gui" default = "false" />
  <arg name = "roller" default = "false" />


  <!--  Import URDF  -->
  <!-- With Rollers -->
  <group if="$(arg roller)">
    <param name="robot_description" command="$(find xacro)/xacro '$(find trikey_description)/urdf/urdf_generator/robot_roller.urdf.xacro'"/>
  </group>

  <!-- Without Rollers -->
  <group unless="$(arg roller)">
    <param name="robot_description" command="$(find xacro)/xacro '$(find trikey_description)/urdf/TrikeyBaseAssembly.urdf.xacro'"/>
  </group>


  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <node unless="$(arg gui)" name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" ></node>

  <node if="$(arg gui)" name="joint_state_publisher" pkg="joint_state_piblisher_gui" />

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find trikey_description)/config/trikey.rviz"/>




  
</launch>